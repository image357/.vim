sethandler a:ide
sethandler <C-W> a:vim
sethandler <C-N> a:vim

let mapleader=","

set showmode
set visualbell
set noerrorbells
set t_vb=
set clipboard+=unnamed

set incsearch
set hlsearch
set ignorecase
set smartcase

set number relativenumber
set scrolloff=5

nmap <leader><space> :nohlsearch<cr>
nmap <leader>f <Action>(ShowIntentionActions)
nmap <leader>e <Action>(ShowErrorDescription)
nmap <leader>c <Action>(Refactorings.QuickListPopupAction)
xmap <leader>c <Action>(Refactorings.QuickListPopupAction)
nmap <leader>g <Action>(GotoDeclaration)
nmap <leader>b <Action>(Back)
nmap <leader>h <Action>(QuickJavaDoc)
nmap <leader>i <Action>(Generate)
nmap <leader>r <Action>(Run)
nmap <leader>d <Action>(Debug)
nmap <leader><leader>r <Action>(RunConfiguration)
nmap <leader>q :wq<cr>
imap jk <esc>

set ideajoin
set ideamarks
set idearefactormode=keep
